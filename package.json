{
  "name": "@devozdemirhasancan/rtmp-srt-server",
  "version": "1.0.2",
  "description": "Simple RTMP to SRT Stream Server",
  "main": "server.js",
  "bin": {
    "rtmp-srt-server": "./server.js"
  },
  "pkg": {
    "targets": [
      "node18-win-x64",
      "node18-macos-arm64",
      "node18-linux-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "node_modules/**/*"
    ]
  },
  "dependencies": {
    "node-media-server": "^2.6.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "node server.js",
    "clean": "rimraf dist",
    "build:win": "pkg . --targets node18-win-x64 --output dist/rtmp-srt-server-win.exe",
    "build:mac": "pkg . --targets node18-macos-arm64 --output dist/rtmp-srt-server-macos",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/rtmp-srt-server-linux",
    "build": "npm run clean && npm run build:win && npm run build:mac && npm run build:linux",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "rtmp",
    "srt",
    "gopro",
    "obs",
    "streaming",
    "ffmpeg"
  ],
  "author": {
    "name": "Hasan Can Ã–zdemir",
    "email": "devozdemirhasancan@gmail.com",
    "url": "https://github.com/devozdemirhasancan"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devozdemirhasancan/rtmp-srt-server.git"
  },
  "bugs": {
    "url": "https://github.com/devozdemirhasancan/rtmp-srt-server/issues"
  },
  "homepage": "https://github.com/devozdemirhasancan/rtmp-srt-server#readme",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
